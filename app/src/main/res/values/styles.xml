<resources>

  <style name="Eddystone" parent="@style/Theme.AppCompat.NoActionBar">
    <item name="android:colorBackground">@color/background_material_dark</item>
    <item name="android:textColorPrimary">@color/primary_text_default</item>
  </style>

  <style name="Eddystone.Button" parent="android:Widget.Holo.Button.Borderless">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">@dimen/button_text_size</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:drawablePadding">@dimen/button_drawable_padding</item>
  </style>

  <style name="Eddystone.Card" parent="CardView">
    <item name="contentPadding">@dimen/card_content_padding</item>
    <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    <item name="cardPreventCornerOverlap">false</item>
    <item name="android:background">@drawable/shape_card_background_default</item>
  </style>

  <style name="Eddystone.CardTitle">
    <item name="android:textSize">@dimen/card_title_size</item>
  </style>

</resources>
